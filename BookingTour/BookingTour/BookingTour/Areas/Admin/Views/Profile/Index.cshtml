@model BookingTour.Models.UserProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




    <div class="col-xs-12 col-sm-3">
        <div class="card profile-card">
            <div class="profile-header">&nbsp;</div>
            <div class="profile-body">
                <div class="image-area">
                    <img src="@Url.Content("~/images/" + (Model.AvatarUrl ?? "default-avatar.jpg"))" class="tour-image" />
                </div>
                <div class="content-area">
                <h3>@Model.fullname</h3>
                <p>@Model.Email</p>
                    <p>Web Software Developer</p>
                    <p>Administrator</p>
                </div>
            </div>  
            <div class="profile-footer">
              
            </div>
        </div>

        <div class="card card-about-me">
            <div class="header">
                <h2>Thông tin của tôi</h2>
            </div>
            <div class="body">
                <ul>
                    <li>
                        <div class="title">
                            <i class="material-icons">library_books</i>
                            Education
                        </div>
                        <div class="content">
                          
                        </div>
                    </li>
                    <li>
                        <div class="title">
                            <i class="material-icons">location_on</i>
                 
                        </div>
                        <div class="content">
                
                        </div>
                    </li>
                    <li>
                        <div class="title">
                            <i class="material-icons">edit</i>
                            
                        </div>
                        <div class="content">
                            <span class="label bg-red">UI Design</span>
                            <span class="label bg-teal">JavaScript</span>
                            <span class="label bg-blue">PHP</span>
                            <span class="label bg-amber">Node.js</span>
                        </div>
                    </li>
                    <li>
                        <div class="title"> 
                            <i class="material-icons">notes</i>
                     
                        </div>
                        <div class="content">
                      
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>


<div class="col-xs-12 col-sm-9">
    <div class="card">
        <div class="body">
            <div>
                <ul class="nav nav-tabs" role="tablist">
               
                    <li role="presentation" class=""><a href="#profile_settings" aria-controls="settings" role="tab" data-toggle="tab" aria-expanded="false">Cập nhật thông tin</a></li>
                    <li role="presentation" class="active"><a href="#change_password_settings" aria-controls="settings" role="tab" data-toggle="tab" aria-expanded="true">Đổi mặt khâu</a></li>
                </ul>

             
                    <div role="tabpanel" class="tab-pane fade" id="profile_settings">

                    <form asp-action="EditProfilee" asp-controller="Profile" method="post" enctype="multipart/form-data" class="form-horizontal">
                        <div class="form-group">
                            <label for="UserName" class="col-sm-2 control-label">Tên người dùng</label>
                            <div class="col-sm-10">
                                <div class="form-line focused">
                                    <input type="text" class="form-control" id="UserName" name="UserName" placeholder="Username" value="@Model.UserName" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="fullname" class="col-sm-2 control-label">Họ và tên</label>
                            <div class="col-sm-10">
                                <div class="form-line focused">
                                    <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Full Name" value="@Model.fullname" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Email" class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <div class="form-line focused">
                                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" value="@Model.Email" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="PhoneNumber" class="col-sm-2 control-label">Số điện thoại</label>
                            <div class="col-sm-10">
                                <div class="form-line focused">
                                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="Phone Number" value="@Model.PhoneNumber">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Address" class="col-sm-2 control-label">Địa chỉ</label>
                            <div class="col-sm-10">
                                <div class="form-line">
                                    <input type="text" class="form-control" id="Address" name="Address" placeholder="Address" value="@Model.Address">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Age" class="col-sm-2 control-label">Tuổi</label>
                            <div class="col-sm-10">
                                <div class="form-line">
                                    <input type="text" class="form-control" id="Age" name="Age" placeholder="Age" value="@Model.Age">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="AvatarFile" class="col-sm-2 control-label">Ảnh đại diện</label>
                            <div class="col-sm-10">
                                <input type="file" class="form-control" id="AvatarFile" name="AvatarFile">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                @* <input type="checkbox" id="terms_condition_check" class="chk-col-red filled-in" required>
                                <label for="terms_condition_check"> <a href="#">s</a></label> *@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-danger">Cập nhật</button>
                            </div>
                        </div>
                    </form>

                    
                </div>
                    <div role="tabpanel" class="tab-pane fade active in" id="change_password_settings">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="OldPassword" class="col-sm-3 control-label">Old Password</label>
                                <div class="col-sm-9">
                                    <div class="form-line">
                                        <input type="password" class="form-control" id="OldPassword" name="OldPassword" placeholder="Old Password" required="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="NewPassword" class="col-sm-3 control-label">New Password</label>
                                <div class="col-sm-9">
                                    <div class="form-line">
                                        <input type="password" class="form-control" id="NewPassword" name="NewPassword" placeholder="New Password" required="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="NewPasswordConfirm" class="col-sm-3 control-label">New Password (Confirm)</label>
                                <div class="col-sm-9">
                                    <div class="form-line">
                                        <input type="password" class="form-control" id="NewPasswordConfirm" name="NewPasswordConfirm" placeholder="New Password (Confirm)" required="">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-danger">SUBMIT</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

